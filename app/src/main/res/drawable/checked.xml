<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke android:width="0.2dp" android:color="#990000" />
                    <solid android:color="#fafafa" />
                    <size android:width="30dp" android:height="30dp" />
                </shape>
            </item>

            <item android:width="8dp" android:height="2dp" android:left="6dp" android:top="20dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#990000" />
                    </shape>
                </rotate>
            </item>

            <item android:width="19dp" android:height="2dp" android:left="9dp" android:top="16dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#990000" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>